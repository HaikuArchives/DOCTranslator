SUBDIR HAIKU_TOP src add-ons translators doc ;

SetSubDirSupportedPlatformsBeOSCompatible ;

SubDirHdrs [ FDirName $(SUBDIR) $(DOTDOT) shared ] ;

AddResources DOCTranslator : DOCTranslator.rdef ;

local architectureObject ;
for architectureObject in [ MultiArchSubDirSetup ] {
  on $(architectureObject) {
    Translator [ MultiArchDefaultGrisdtFiles DOCTranslator ] :
      DOCMain.cpp
      DOCTranslator.cpp
      DOCView.cpp

    : be translation
      [ TargetLibsupc++ ]
      [MultiArchDefaultGristFiles libtranslatorutils.a ]
      localestub
    : true
    ;
  }
}

DoCatalogs DOCTranslator :
  x-vnd.Haiku-DOCTranslator
  :
  DOCMain.cpp
  DOCTranslator.cpp
  DOCView.cpp
;
